                    <amx:cellFormat id="cf22" width="100%" halign="start" valign="middle">
                      <amx:outputText value="#{row.job}" id="ot22"
                                      styleClass="EMA_text-white EMA_BoldFont EMA_noWrap EMA_XSmallFontSize"/>
                    </amx:cellFormat>
