                      </amx:panelGroupLayout>
                    </amx:cellFormat>
                  </amx:rowLayout>
                  <amx:rowLayout id="rl2">
                    <amx:cellFormat id="cf11" halign="start">
                      <amx:outputText value="#{row.submissionName}" id="ot16"
