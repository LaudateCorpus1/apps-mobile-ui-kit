                    <amx:cellFormat id="cf10" halign="end">
                      <amx:outputText id="ot15" styleClass="EMA_text-white EMA_BoldFont EMA_noWrap EMA_XSmallFontSize"
                                      value="#{row.submissionStatus}"/>
